<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

            <!-- Drop Shadow Stack -->
            <item>
                <shape>
                    <solid android:color="#00CCCCCC" />
                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="#10CCCCCC" />

                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="#20CCCCCC" />

                </shape>
            </item>
            <item>
                <shape>
                    <padding
                        android:bottom="1dp"
                        android:left="1dp"
                        android:right="1dp"
                        android:top="1dp" />
                    <solid android:color="#30CCCCCC" />
                </shape>
            </item>
            <item>
                <shape>
                    <padding
                        android:bottom="1dp"
                        android:left="1dp"
                        android:right="1dp"
                        android:top="1dp" />
                    <solid android:color="#50CCCCCC" />
                </shape>
            </item>

            <!-- Background -->
            <item>
                <shape>
                    <solid android:color="@color/colorPinkLearned" />
                </shape>
            </item>

        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

            <!-- Drop Shadow Stack -->
            <item>
                <shape>
                    <solid android:color="#00CCCCCC" />
                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="#10CCCCCC" />

                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="#20CCCCCC" />

                </shape>
            </item>
            <item>
                <shape>
                    <padding
                        android:bottom="1dp"
                        android:left="1dp"
                        android:right="1dp"
                        android:top="1dp" />
                    <solid android:color="#30CCCCCC" />
                </shape>
            </item>
            <item>
                <shape>
                    <padding
                        android:bottom="1dp"
                        android:left="1dp"
                        android:right="1dp"
                        android:top="1dp" />
                    <solid android:color="#50CCCCCC" />
                </shape>
            </item>

            <!-- Background -->
            <item>
                <shape>
                    <solid android:color="@color/colorPinkLight"  />
                </shape>
            </item>

        </layer-list>
    </item>

</selector>
